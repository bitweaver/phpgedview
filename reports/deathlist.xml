<PGVReport access="PGV_PUBLIC" icon="place">
	<!-- $Id$ -->
	<PGVRTitle><PGVRvar var="pgv_lang[death_report]" /></PGVRTitle>
	<PGVRDescription>Prints a list of individuals matching specific death criteria</PGVRDescription>
	<PGVRInput name="deathplace" lookup="PLAC" type="text"><PGVRvar var="pgv_lang[deathplace]" /> </PGVRInput>
	<PGVRInput name="deathdate1" lookup="DATE" type="text"><PGVRvar var="pgv_lang[deathdate1]" /></PGVRInput>
	<PGVRInput name="deathdate2" lookup="DATE" type="text"><PGVRvar var="pgv_lang[deathdate2]" /></PGVRInput>
	<PGVRInput name="sortby" type="select" options="NAME,DEAT"><PGVRvar var="pgv_lang[sort_by]" /></PGVRInput>
	<PGVRInput name="pageSize" type="select" options="letter,A4,A3,A5,legal"><PGVRvar var="pgv_lang[page_size]" /></PGVRInput>
	<PGVRStyle name="header" font="LucidaSansUnicode" size="16" style="b" />
	<PGVRStyle name="pagenum" font="LucidaSansUnicode" size="8" style="" />
	<PGVRStyle name="text" font="LucidaSansUnicode" size="9" style="" />
	<PGVRStyle name="label" font="LucidaSansUnicode" size="10" style="b" />
	<PGVRDoc pageSize="$pageSize" orientation="P" margin="24">
		<PGVRHeader>
			<PGVRCell width="0" height="20" align="center" style="header"><PGVRvar var="pgv_lang[death_report]" /></PGVRCell>
			<PGVRCell width="0" height="10" align="right" style="pagenum"><PGVRvar var="pgv_lang[page]" /> <PGVRPageNum /> <PGVRvar var="pgv_lang[of]" /> <PGVRTotalPages /></PGVRCell>
			<PGVRTextBox width="60" height="12" border="1">
				<PGVRText style="label"> </PGVRText>
			</PGVRTextBox>
			<PGVRTextBox width="200" height="12" border="1">
				<PGVRText style="label"><PGVRvar var="pgv_lang[name]" /></PGVRText>
			</PGVRTextBox>
			<PGVRTextBox width="150" height="12" border="1">
				<PGVRText style="label"><PGVRvar var="pgv_lang[date]" /></PGVRText>
			</PGVRTextBox>
			<PGVRTextBox width="0" height="12" border="1" newline="1">
				<PGVRText style="label"><PGVRvar var="factarray[PLAC]" /></PGVRText>
			</PGVRTextBox>
		</PGVRHeader>
		<PGVRBody>
			<PGVRList list="individual" filter1="DEAT:PLAC CONTAINS $deathplace" filter2="DEAT:DATE GTE $deathdate1" filter3="DEAT:DATE LTE $deathdate2" sortby="$sortby">
				<PGVRTextBox width="60" height="12" border="0">
					<PGVRText style="text"><PGVRGedcomValue tag="@id" /></PGVRText>
				</PGVRTextBox>
				<PGVRTextBox width="200" height="12" border="0">
					<PGVRText style="text"><PGVRGetPersonName id="" /></PGVRText>
				</PGVRTextBox>
				<PGVRTextBox width="150" height="12" border="0">
					<PGVRText style="text"><PGVRGedcomValue tag="DEAT:DATE" /></PGVRText>
				</PGVRTextBox>
				<PGVRTextBox width="0" height="12" border="0" newline="1">
					<PGVRText style="text"><PGVRGedcomValue tag="DEAT:PLAC" /></PGVRText>
				</PGVRTextBox>
			</PGVRList>
			<PGVRCell width="0" height="12" border="0" align="right" style="label">
				<br /><PGVRvar var="pgv_lang[total_indis]" />: <PGVRListTotal />
			</PGVRCell>
		</PGVRBody>
		<PGVRFooter>
			<PGVRCell width="0" height="10"><PGVRNow /></PGVRCell>
		</PGVRFooter>
	</PGVRDoc>
</PGVReport>
