<PGVReport access="PGV_PUBLIC" icon="place">
	<!--
	@package PhpGedView
	@subpackage Reports
	@version $Id$ $Id$
	-->
	<PGVRTitle>
		<PGVRvar var="pgv_lang[bdm]" />
	</PGVRTitle>
	<PGVRDescription>
		Prints a list of BIRT/DEAT/MARR events for individuals matching PLAC criteria.
	</PGVRDescription>
	<PGVRInput name="bdmplace" lookup="PLAC" type="text">
		<PGVRvar var="factarray[PLAC]" />
	</PGVRInput>
	<PGVRInput name="birthdate1" lookup="DATE" type="text">
		<PGVRvar var="pgv_lang[birthdate1]" />
	</PGVRInput>
	<PGVRInput name="birthdate2" lookup="DATE" type="text">
		<PGVRvar var="pgv_lang[birthdate2]" />
	</PGVRInput>
	<PGVRInput name="deathdate1" lookup="DATE" type="text">
		<PGVRvar var="pgv_lang[deathdate1]" />
	</PGVRInput>
	<PGVRInput name="deathdate2" lookup="DATE" type="text">
		<PGVRvar var="pgv_lang[deathdate2]" />
	</PGVRInput>
	<PGVRInput name="sortby" type="select" options="BIRT,DEAT,ID,NAME">
		<PGVRvar var="pgv_lang[sort_by]" />
	</PGVRInput>
	<PGVRInput name="pageSize" type="select" options="A4,A3,letter,legal">
		<PGVRvar var="pgv_lang[page_size]" />
	</PGVRInput>
	<PGVRStyle name="header" font="LucidaSansUnicode" size="16" style="b" />
	<PGVRStyle name="pagenum" font="LucidaSansUnicode" size="8" style="" />
	<PGVRStyle name="text" font="LucidaSansUnicode" size="9" style="" />
	<PGVRStyle name="small" font="LucidaSansUnicode" size="7" style="" />
	<PGVRStyle name="label" font="LucidaSansUnicode" size="10" style="b" />
	<PGVRDoc pageSize="$pageSize" orientation="L" margin="24">
		<PGVRHeader>
			<PGVRCell width="0" height="20" align="center" style="label">
				<PGVRvar var="pgv_lang[bdm]" />
			</PGVRCell>
			<PGVRCell width="0" height="20" align="center" style="header">
				<PGVRif condition="$bdmplace!=''">
					<PGVRvar var="bdmplace" />
				</PGVRif>
			</PGVRCell>
			<PGVRCell width="0" height="10" align="right" style="pagenum">
				<PGVRvar var="pgv_lang[page]" /> <PGVRPageNum /> <PGVRvar var="pgv_lang[of]" /> <PGVRTotalPages />
			</PGVRCell>
			<PGVRSetVar name="fill" value="" />
			<PGVRif condition="$sortby=='ID'">
				<PGVRSetVar name="fill" value="#DDDDDD" />
			</PGVRif>
			<PGVRTextBox width="60" height="12" border="1" fill="$fill">
				<PGVRText style="label">
				</PGVRText>
			</PGVRTextBox>
			<PGVRSetVar name="fill" value="" />
			<PGVRif condition="$sortby=='NAME'">
				<PGVRSetVar name="fill" value="#DDDDDD" />
			</PGVRif>
			<PGVRTextBox width="210" height="12" border="1" fill="$fill">
				<PGVRText style="label">
					<PGVRvar var="pgv_lang[name]" />
				</PGVRText>
			</PGVRTextBox>
			<PGVRSetVar name="fill" value="" />
			<PGVRif condition="$sortby=='BIRT'">
				<PGVRSetVar name="fill" value="#DDDDDD" />
			</PGVRif>
			<PGVRTextBox width="170" height="12" border="1" fill="$fill">
				<PGVRText style="label">
					<PGVRvar var="factarray[BIRT]" />   [
					<PGVRif condition="$birthdate1!=''">
						<PGVRvar var="birthdate1" />
					</PGVRif>
					-
					<PGVRif condition="$birthdate2!=''">
						<PGVRvar var="birthdate2" />
					</PGVRif>
					]
				</PGVRText>
			</PGVRTextBox>
			<PGVRTextBox width="170" height="12" border="1">
				<PGVRText style="label">
					<PGVRvar var="factarray[MARR]" />
				</PGVRText>
			</PGVRTextBox>
			<PGVRSetVar name="fill" value="#FFFFFF" />
			<PGVRif condition="$sortby=='DEAT'">
				<PGVRSetVar name="fill" value="#DDDDDD" />
			</PGVRif>
			<PGVRTextBox width="170" height="12" border="1" fill="$fill" newline="1">
				<PGVRText style="label">
					<PGVRvar var="factarray[DEAT]" />   [
					<PGVRif condition="$deathdate1!=''">
						<PGVRvar var="deathdate1" />
					</PGVRif>
					-
					<PGVRif condition="$deathdate2!=''">
						<PGVRvar var="deathdate2" />
					</PGVRif>
					]
				</PGVRText>
			</PGVRTextBox>
		</PGVRHeader>
		<PGVRBody>
			<PGVRSetVar name="filter1" value="" />
			<PGVRif condition="$bdmplace!=''">
				<PGVRSetVar name="filter1" value=":PLAC CONTAINS $bdmplace" />
			</PGVRif>
			<PGVRList list="individual"
				filter1="$filter1"
				filter2="BIRT:DATE GTE $birthdate1"
				filter3="BIRT:DATE LTE $birthdate2"
				filter4="DEAT:DATE GTE $deathdate1"
				filter5="DEAT:DATE LTE $deathdate2"
				sortby="$sortby">
				<PGVRSetVar name="spid" value="@ID" />
				<PGVRTextBox width="60" height="41" border="0">
					<PGVRText style="text">
						<PGVRGedcomValue tag="@id" />
					</PGVRText>
				</PGVRTextBox>
				<PGVRTextBox width="210" height="41" border="0">
					<PGVRText style="text">
						<PGVRGetPersonName id="" />
					</PGVRText>
					<PGVRText style="small">
						<br />   <PGVRvar var="pgv_lang[father]" />
						: <PGVRGedcom id="@FAMC"><PGVRGetPersonName id="@HUSB" truncate="32" /></PGVRGedcom>
						<br />   <PGVRvar var="pgv_lang[mother]" />
						: <PGVRGedcom id="@FAMC"><PGVRGetPersonName id="@WIFE" truncate="32" /></PGVRGedcom>
					</PGVRText>
				</PGVRTextBox>
				<PGVRTextBox width="170" height="41" border="1">
					<PGVRRepeatTag tag="BIRT">
						<PGVRText style="small">
							<PGVRvar var="factarray[DATE]" />
							: <PGVRGedcomValue tag="BIRT:DATE" />
							<br />   <PGVRvar var="factarray[PLAC]" />
							: <PGVRGedcomValue tag="BIRT:PLAC" />
							<br />      <PGVRvar var="factarray[SOUR]" />
							: <PGVRGedcomValue tag="BIRT:SOUR" />
						</PGVRText>
					</PGVRRepeatTag>
				</PGVRTextBox>
				<PGVRTextBox width="170" height="41" border="1">
					<PGVRSetVar name="more" value="0" />
					<PGVRRepeatTag tag="FAMS">
						<PGVRGedcom id="@FAMS">
							<PGVRif condition="$more==1">
								<PGVRText style="small">
									<br />
									~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
									<br />
								</PGVRText>
							</PGVRif>
							<PGVRText style="small">
								<PGVRvar var="factarray[DATE]" />
								: <PGVRGedcomValue tag="MARR:DATE" />
								<br />   <PGVRvar var="factarray[PLAC]" />
								: <PGVRGedcomValue tag="MARR:PLAC" />
								<br />      <PGVRvar var="factarray[SOUR]" />
								: <PGVRGedcomValue tag="MARR:SOUR" />
								<br />
								<PGVRvar var="pgv_lang[spouse]" />
								: </PGVRText>
							<PGVRif condition="$spid==@WIFE">
								<PGVRText style="small">
									<PGVRGetPersonName id="@HUSB" truncate="32" />
								</PGVRText>
							</PGVRif>
							<PGVRif condition="$spid==@HUSB">
								<PGVRText style="small">
									<PGVRGetPersonName id="@WIFE" truncate="32" />
								</PGVRText>
							</PGVRif>
							<PGVRSetVar name="more" value="1" />
						</PGVRGedcom>
					</PGVRRepeatTag>
				</PGVRTextBox>
				<PGVRTextBox width="170" height="41" border="1" newline="1">
					<PGVRRepeatTag tag="DEAT">
						<PGVRText style="small">
							<PGVRvar var="factarray[DATE]" />
							: <PGVRGedcomValue tag="DEAT:DATE" />
							<br />   <PGVRvar var="factarray[PLAC]" />
							: <PGVRGedcomValue tag="DEAT:PLAC" />
							<br />      <PGVRvar var="factarray[SOUR]" />
							: <PGVRGedcomValue tag="DEAT:SOUR" />
						</PGVRText>
					</PGVRRepeatTag>
					<PGVRRepeatTag tag="BURI">
						<PGVRRepeatTag tag="CEME">
							<PGVRText style="small">
								<br /><PGVRvar var="factarray[CEME]" />
								: <PGVRGedcomValue tag="BURI:CEME" />
							</PGVRText>
						</PGVRRepeatTag>
					</PGVRRepeatTag>
				</PGVRTextBox>
			</PGVRList>
			<PGVRCell width="0" height="12" border="0" align="right" style="label">
				<br /><PGVRvar var="pgv_lang[total_indis]" />
				: <PGVRListTotal />
			</PGVRCell>
		</PGVRBody>
		<PGVRFooter>
			<PGVRCell width="0" height="10">
				<PGVRNow />
			</PGVRCell>
		</PGVRFooter>
	</PGVRDoc>
</PGVReport>
